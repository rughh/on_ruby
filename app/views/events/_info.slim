.d-flex.card-title
  .flex-fill
    h2= link_to_event(event)
    small.text-muted
      = t("show.hosted_by")
      =< link_to_user(event.user)
      - if event.location.present?
        =< t('show.at')
        =< link_to_location(event.location)
      = ", #{l(event.date, format: :long)}"

  div
    = participation_link(event, link_class: 'btn btn-primary btn-block')
    = remote_url_link(event, link_class: 'btn btn-primary btn-block')

.card-text
  == markdown(event.description)

- if event.attendee_information?
  - if signed_in?
    .card-text
      == markdown(event.attendee_information)
  - else
    .card-text
      mark= t('show.attend_to_view_attendees_information')
