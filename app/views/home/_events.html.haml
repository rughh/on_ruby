= section_box :events do
  %p
    - if current_event
      - uid = 'current_event'
      = fancy_link_to 'Das nÃ¤chste Treffen', current_event, uid
      findet am
      %em= l(current_event.date)
      bei 
      = link_to current_event.location.name, current_event.location.url
      statt!
      = fancy_box(uid, current_event) do
        = event_with_tooltip current_event
    - else
      Das nÃ¤chste Treffen findet voraussichtlich am
      %em= "#{l(next_event_date)}"
      statt.
    
  %h3 Vergangene Treffen
  %ul.clearfix
    - events.each do |event|
      - uid = "event_#{event.id}"
      %li
        = fancy_link_to "#{l(event.date, format: :date)} - #{event.name}", event, uid
        = fancy_box(uid, event) do
          = event_with_tooltip event
